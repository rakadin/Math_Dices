<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.math_dices">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icongame"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icongame"
        android:supportsRtl="true"
        android:theme="@style/Theme.Math_Dices"
        tools:targetApi="31">
        <activity
            android:name=".game_activity.Slide_game_main"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".winning_activity.Winning_activity_Slide"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".introductions.Slide_introduction"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".HomePageActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>